{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Unity MCP Gateway",
      "type": "shell",
      "command": "node",
      "args": ["gateway/index.js"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Install Gateway Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/gateway"
      },
      "problemMatcher": []
    }
  ]
}

