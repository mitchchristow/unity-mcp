{
    "name": "unity-mcp-vscode",
    "displayName": "Unity MCP Client",
    "description": "Control Unity Editor via MCP from VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "unity.connect",
                "title": "Unity MCP: Connect"
            },
            {
                "command": "unity.play",
                "title": "Unity MCP: Play"
            },
            {
                "command": "unity.stop",
                "title": "Unity MCP: Stop"
            },
            {
                "command": "unity.refresh",
                "title": "Unity MCP: Refresh Hierarchy"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "unity-mcp-explorer",
                    "title": "Unity",
                    "icon": "resources/unity-icon.svg"
                }
            ]
        },
        "views": {
            "unity-mcp-explorer": [
                {
                    "id": "unityHierarchy",
                    "name": "Hierarchy"
                },
                {
                    "id": "unityConsole",
                    "name": "Console"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "^16.x",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "ws": "^8.13.0"
    }
}